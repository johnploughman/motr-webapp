{{#partial "content" }}
    <header class="content-header">
        <h1>
            <span class="content-header__type"></span>
            <span class="content-header__title">
                What is your email address?
            </span>
        </h1>
    </header>
    {{#message}}
        {{> partial/error-message }}
    {{/message}}
    <form action="" method="POST" autocomplete="off" novalidate="">
        <input name="__csrf" value="{{{csrf this}}}" type="hidden"/>
        <fieldset>
            <div class="form-group {{#message}}has-error{{/message}}">
                <label for="emailAddress" class="form-label">
                    Email address
                    {{#message}}<span class="validation-message">{{ message }}</span>{{/message}}
                    <span class="form-hint">Your reminder will be sent here</span>
                </label>
                <input type="email" name="emailAddress" id="emailAddress" class="form-control form-control-1-3" value="{{email}}">
            </div>
        </fieldset>
        <nav class="content-navigation">
            <input type="submit" value="{{continue_button_text}}" class="button" id="continue">
            <ul class="content-navigation__secondary">
                <li>
                    <a id="back-button" href="{{back_url}}">{{back_button_text}}</a>
                </li>
            </ul>
        </nav>
    </form>
{{/partial}}
{{> master}}
